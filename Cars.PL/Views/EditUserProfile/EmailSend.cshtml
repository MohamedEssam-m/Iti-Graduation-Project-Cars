<link rel="stylesheet" href="~/css/SignUp.css" />
<link rel="stylesheet" href="~/css/ViewBag.css" />
<script src="~/js/ViewBag.js"></script>

@if (ViewBag.Success != null)
{
    <div class="toast-alert success-toast">
        <span>@ViewBag.Success</span>
        <button class="close-btn">&times;</button>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="toast-alert error-toast">
        <span>@ViewBag.Error</span>
        <button class="close-btn">&times;</button>
    </div>
}
<br />
<br />
<br />
<div class="registration-container">
    <div class="registration-card">
        <div class="registration-header">
            <h2>Send Email</h2>
            <p>The Verification Email Has been Sent To You, Please Check Your Inbox </p>
            <div class = "text-center mt-2">
                <a asp-controller="Account" asp-action="LoginView" class="btn-back">Back To LogIn</a>

            </div>
        </div>

        
    </div>
</div>
<style>
.signup-choice-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    background: linear-gradient(135deg, #000000, #1a1a1a);
    padding: 20px;
}

.signup-choice-card {
    background: #fff;
    border-radius: 12px;
    padding: 40px 30px;
    text-align: center;
    box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    max-width: 400px;
    width: 100%;
}

.signup-choice-card h2 {
    font-size: 28px;
    font-weight: 700;
    color: #000;
    margin-bottom: 15px;
}

.signup-choice-card p {
    font-size: 16px;
    color: #333;
    margin-bottom: 30px;
}

.signup-buttons {
    display: flex;
    justify-content: space-between;
    gap: 20px;
}

.signup-buttons .btn {
    flex: 1;
    padding: 12px 0;
    font-size: 16px;
    font-weight: bold;
    border-radius: 8px;
    text-decoration: none;
    color: #fff;
    transition: all 0.3s ease;
    display: inline-block;
}

.btn-user {
    background: #00bcd4;
}

.btn-user:hover {
    background: #000;
    box-shadow: 0 0 10px #00bcd4;
}

.btn-mechanic {
    background: #000;
    border: 2px solid #00bcd4;
}

.btn-mechanic:hover {
    background: #00bcd4;
    box-shadow: 0 0 10px #00bcd4;
}
.btn-back {
    display: inline-block;
    padding: 10px 20px;
    background-color: #fff;
    color: cyan;
    border: 2px solid cyan;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
}

.btn-back:hover {
    background-color: cyan;
    color: #fff;
    transform: scale(1.05);
    box-shadow: 0 4px 10px rgba(0, 255, 255, 0.3);
}

</style>






