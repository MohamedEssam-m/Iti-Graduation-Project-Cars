@model Car
@{
    ViewData["Title"] = "Car Ratings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/ViewRatings.css" />

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs">
                    <span class="mr-2">
                        <a href="@Url.Action("Index", "Home")">Home <i class="ion-ios-arrow-forward"></i></a>
                    </span> 
                    <span>Ratings <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread">Ratings for @Model.Brand @Model.Model (@Model.Year)</h1>
            </div>
        </div>
    </div>
</section>

<section class="ratings-container">
    <div class="ratings-card">
        @if (Model.CarRates != null && Model.CarRates.Any())
        {
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>User</th>
                        <th>Rating</th>
                        <th>Comment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rating in Model.CarRates)
                    {
                        var userFullName = rating.UserFullName;
                        var stars = rating.Rating;
                        var comment = rating.Comment;

                        <tr>
                            <td>@userFullName</td>
                            <td>
                                @for (int i = 0; i < stars; i++)
                                {
                                    <span style="color:gold;">★</span>
                                }
                                @for (int i = stars; i < 5; i++)
                                {
                                    <span style="color:#ccc;">★</span>
                                }
                            </td>
                            <td>@comment</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No ratings available for this car yet</p>
        }
        <!-- Back Button -->
        <div class="rate-car-btn" style="margin-top:20px; text-align:right;">
            <form asp-action="Cars" asp-controller="Home" method="get" class="registration-form">
                <button type="submit" id="openRatingModal" class="btn btn-primary">
                    Back
                </button>
            </form>
            
        </div>
    </div>
</section>
