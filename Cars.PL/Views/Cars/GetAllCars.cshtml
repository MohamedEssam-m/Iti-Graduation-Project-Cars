@model List<Car>
<link rel="stylesheet" href="~/css/GetAllCars.css" />
<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs">
                    <span class="mr-2">
                        <a href="@Url.Action("Index", "Home")">@SharedLocalizer["Home"] <i class="ion-ios-arrow-forward"></i></a>
                    </span> 
                    <span>Roles <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread">Car Details</h1>
            </div>
        </div>
    </div>
</section>
@if(Model.Count == 0)
{
    <h2 class="alert alert-info" role="alert">
        <br />
        <br />
        <br />
        <br />
        <br />
        No cars available.
    </h2>
})
<div class="container">
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="car-card">
                    <!-- صورة العربية -->
                    <div class="car-image" style="background-image: url('@car.CarImagePath');">
                    </div>

                    <!-- محتوى الكارت -->
                    <div class="car-content">
                        <h2 class="car-brand">@car.Brand</h2>
                        <div class="car-info">
                            <p class="car-model">@car.Model</p>
                            <p class="car-price">$@car.PricePerDay /day</p>
                        </div>

                        <!-- الأزرار -->
                        <div class="car-buttons">
                            <form asp-controller="Cars" asp-action="UpdateCarView" method="post">
                                <button type="submit" name="CarId" value="@car.CarId" class="book-button">
                                    <i class="fa fa-edit"></i> Update
                                </button>
                            </form>

                            <form asp-controller="Cars" asp-action="DeleteCarView" method="post">
                                <button type="submit" name="CarId" value="@car.CarId" class="details-button">
                                    <i class="fa fa-trash"></i> Delete
                                </button>
                            </form>

                            <form asp-controller="Cars" asp-action="CarDetails" method="post">
                                <button type="submit" name="CarId" value="@car.CarId" class="details-button">
                                    <i class="fa fa-car"></i> Details
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



                            
                            
                                
}          