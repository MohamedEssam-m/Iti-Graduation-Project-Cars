@model UpdateCarVM

@{
    ViewData["Title"] = "Update Car";
}
<link rel="stylesheet" href="~/css/CreateCar.css" />
<link rel="stylesheet" href="~/css/ViewBag.css" />
<script src="~/js/ViewBag.js"></script>
@if (ViewBag.Success != null)
{
    <div class="toast-alert success-toast">
        <span>@ViewBag.Success</span>
        <button class="close-btn">&times;</button>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="toast-alert error-toast">
        <span>@ViewBag.Error</span>
        <button class="close-btn">&times;</button>
    </div>
}
<br />
<br />
<br />
<br />
<h2>Update Car</h2>

<form enctype="multipart/form-data" asp-action="UpdateCar" asp-controller="Cars" method="post" class="car-form">
    <div class="form-wrap">
        <input type="hidden" asp-for="CarId" />
        

        <!-- Brand -->
        <div class="form-group">
            <label asp-for="Brand"></label>
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <!-- Model -->
        <div class="form-group">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <!-- Year -->
        <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" type="number" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <!-- BodyType -->
        <div class="form-group">
            <label asp-for="BodyType"></label>
            <input asp-for="BodyType" class="form-control" />
            <span asp-validation-for="BodyType" class="text-danger"></span>
        </div>

        <!-- Doors -->
        <div class="form-group">
            <label asp-for="Doors"></label>
            <input asp-for="Doors" type="number" class="form-control" />
            <span asp-validation-for="Doors" class="text-danger"></span>
        </div>

        

        <!-- Engine Capacity -->
        <div class="form-group">
            <label asp-for="EngineCapacity"></label>
            <input asp-for="EngineCapacity" type="number" step="0.1" class="form-control" />
            <span asp-validation-for="EngineCapacity" class="text-danger"></span>
        </div>

        <!-- Horse Power -->
        <div class="form-group">
            <label asp-for="HorsePower"></label>
            <input asp-for="HorsePower" type="number" class="form-control" />
            <span asp-validation-for="HorsePower" class="text-danger"></span>
        </div>

        <!-- Fuel Consumption -->
        <div class="form-group">
            <label asp-for="FuelConsumption"></label>
            <input asp-for="FuelConsumption" type="number" step="0.1" class="form-control" />
            <span asp-validation-for="FuelConsumption" class="text-danger"></span>
        </div>

        <!-- Seats -->
        <div class="form-group">
            <label asp-for="Seats"></label>
            <input asp-for="Seats" type="number" class="form-control" />
            <span asp-validation-for="Seats" class="text-danger"></span>
        </div>

        <!-- Fuel Type -->
<div class="form-group">
    <label asp-for="FuelType"></label>
    <select asp-for="FuelType" class="form-control">
        <option value="">-- Select Fuel Type --</option>
        <option value="Petrol">Petrol</option>
        <option value="Diesel">Diesel</option>
        <option value="Electric">Electric</option>
        <option value="Hybrid">Hybrid</option>
    </select>
    <span asp-validation-for="FuelType" class="text-danger"></span>
</div>

<!-- Transmission -->
<div class="form-group">
    <label asp-for="Transmission"></label>
    <select asp-for="Transmission" class="form-control">
        <option value="">-- Select Transmission --</option>
        <option value="Automatic">Automatic</option>
        <option value="Manual">Manual</option>
    </select>
    <span asp-validation-for="Transmission" class="text-danger"></span>
</div>


        <!-- Luggage Capacity -->
        <div class="form-group">
            <label asp-for="LuggageCapacity"></label>
            <input asp-for="LuggageCapacity" type="number" class="form-control" />
            <span asp-validation-for="LuggageCapacity" class="text-danger"></span>
        </div>

        <!-- Price Per Day -->
        <div class="form-group">
            <label asp-for="PricePerDay"></label>
            <input asp-for="PricePerDay" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="PricePerDay" class="text-danger"></span>
        </div>

        <!-- Max Km Per Day -->
        <div class="form-group">
            <label asp-for="MaxKmPerDay"></label>
            <input asp-for="MaxKmPerDay" type="number" class="form-control" />
            <span asp-validation-for="MaxKmPerDay" class="text-danger"></span>
        </div>
        <!-- quantity -->
        <div class="form-group">
            <label asp-for="quantity"></label>
            <input asp-for="quantity" type="number" class="form-control" />
            <span asp-validation-for="quantity" class="text-danger"></span>
        </div>
        <!-- Status -->
        <div class="form-group">
            <label asp-for="Status"></label>
            <input asp-for="Status" type="text" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <!-- Car Image -->
        <div class="form-group">
            <label asp-for="Car_Image" class="form-label">Upload Car Image</label>
            <input asp-for="Car_Image" type="file" class="form-control" />
            <span asp-validation-for="Car_Image" class="text-danger"></span>
        </div>
        <!-- Boolean Checkboxes -->
        <div class="checkbox-group">
            <label class="checkbox-btn">
                <input asp-for="InsuranceIncluded" type="checkbox" />
                <span class="checkmark"></span>
                Insurance Included
            </label>

            <label class="checkbox-btn">
                <input asp-for="HasAirCondition" type="checkbox" />
                <span class="checkmark"></span>
                Air Conditioning
            </label>

            <label class="checkbox-btn">
                <input asp-for="HasMultimedia" type="checkbox" />
                <span class="checkmark"></span>
                Multimedia System
            </label>

            <label class="checkbox-btn">
                <input asp-for="HasAirbags" type="checkbox" />
                <span class="checkmark"></span>
                Airbags
            </label>

            <label class="checkbox-btn">
                <input asp-for="HasABS" type="checkbox" />
                <span class="checkmark"></span>
                ABS
            </label>

            <label class="checkbox-btn">
                <input asp-for="HasESP" type="checkbox" />
                <span class="checkmark"></span>
                ESP
            </label>

            <label class="checkbox-btn">
                <input asp-for="HasRearCamera" type="checkbox" />
                <span class="checkmark"></span>
                Rear Camera
            </label>

            <label class="checkbox-btn">
                <input asp-for="HasParkingSensors" type="checkbox" />
                <span class="checkmark"></span>
                Parking Sensors
            </label>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
