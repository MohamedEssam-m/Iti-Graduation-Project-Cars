                @foreach(var car in Model)
{
<div class="car-column">
    <div class="car-card">
        <!-- Car Image -->
        <div class="car-image" style="background-image: url('/Files/@car.CarImagePath');">
        </div>

        <!-- Car Content -->
        <div class="car-content">
            <h2 class="car-brand">@car.Brand @car.Year</h2>
            
            <div class="car-info" style="display:grid; grid-template-columns:repeat(3,1fr); gap:8px;">
    <h4 class="car-model" style="margin:0;">@car.Brand @car.Model </h4>
    <p class="car-price" style="margin:0; font-weight:bold;">$@car.PricePerDay /day</p>
    <p class="car-price" style="margin:0; color:#f1c40f;">@car.AverageRating ⭐</p>
    <p class="car-price" style="margin:0; grid-column:span 3;">Quantity : @car.quantity</p>
    @if (car.quantity < 1)
    {
        <p class="car-price" style="margin:0; grid-column:span 3;">
            <span class="car-price">Status :</span> 
            <span style="color:red;">@car.Status</span>
        </p>
    }
    else
    {
        <p class="car-price" style="margin:0; grid-column:span 3;">
            <span class="car-price">Status :</span> 
            <span style="color:green;">@car.Status</span>
        </p>
    }


</div>

            <div class="car-buttons">
                @if(User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Rent" asp-action="RentingDetails" method="post">
                        <button type="submit" name="CarId" value="@car.CarId" class="book-button">
                            <i class="fa fa-user"></i> Book now
                        </button>
                    </form>
                            
                }
                @if(!User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Account" asp-action="LoginView" method="post">
                        <button type="submit" class="book-button">
                            <i class="fa fa-user"></i> LogIn To Book
                        </button>
                    </form>
                            
                }

                <form asp-controller="Cars" asp-action="CarDetails" method="post">
                    <button type="submit" name="CarId" value="@car.CarId" class="details-button">
                        <i class="fa fa-car"></i> Details
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

                            
                            
                                
}                    





