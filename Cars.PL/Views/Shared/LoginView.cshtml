@using Cars.BLL.ModelVM.Account
@model SignInVM


<link rel="stylesheet" href="~/css/SignUp.css" />

<div class="registration-container">
    <div class="registration-card">
        <div class="registration-header">
            
            <h2>@SharedLocalizer["Login"]</h2>
            <p>@SharedLocalizer["JoinUsToday"]</p>
        </div>
        <link rel="stylesheet" href="~/css/ViewBag.css" />
<script src="~/js/ViewBag.js"></script>

@if (ViewBag.Success != null)
{
    <div class="toast-alert success-toast">
        <span>@ViewBag.Success</span>
        <button class="close-btn">&times;</button>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="toast-alert error-toast">
        <span>@ViewBag.Error</span>
        <button class="close-btn">&times;</button>
    </div>
}
        <form asp-action="Login" asp-controller="Account" method="post" class="registration-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            
            

            <!-- Email -->
            <div class="form-group">
                <label asp-for="UserName" class="form-label">@SharedLocalizer["Username"] *</label>
                <input asp-for="UserName" class="form-input" placeholder="@SharedLocalizer["EnterYourUsername"]" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

           

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password" class="form-label">@SharedLocalizer["Password"] *</label>
                <input asp-for="Password" class="form-input" type="password" placeholder="@SharedLocalizer["EnterYourPassword"]" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn-register">@SharedLocalizer["Confirm"]</button>
            </div>

            <!-- Divider -->
            <div class="divider">
                <span>@SharedLocalizer["Or"]</span>
            </div>

           <a asp-controller="Account" asp-action="GoogleSignIn">Sign in with Google</a>

           <!-- Divider -->
            <div class="divider">
                <span>@SharedLocalizer["Or"]</span>
            </div>
            <!-- forget password Link -->
            <div class="login-link">
                <p>Forget Password? <a asp-action="VerifyEmail" asp-controller="EditUserProfile">Reset Password</a></p>
            </div>
            <!-- SignUp Link -->
            <div class="login-link">
                <p>@SharedLocalizer["CreateAnAccount"] <a asp-action="determineRole" asp-controller="Account">@SharedLocalizer["SignUp"]</a></p>
            </div>
        </form>
    </div>
</div>

