@using Cars.BLL.ModelVM.Account
@model SignInVM


<link rel="stylesheet" href="~/css/SignUp.css" />

<div class="registration-container">
    <div class="registration-card">
        <div class="registration-header">
            
            <h2>@SharedLocalizer["Login"]</h2>
            <p>@SharedLocalizer["JoinUsToday"]</p>
        </div>
        <link rel="stylesheet" href="~/css/ViewBag.css" />
<script src="~/js/ViewBag.js"></script>

@if (ViewBag.Success != null)
{
    <div class="toast-alert success-toast">
        <span>@ViewBag.Success</span>
        <button class="close-btn">&times;</button>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="toast-alert error-toast">
        <span>@ViewBag.Error</span>
        <button class="close-btn">&times;</button>
    </div>
}
        <form asp-action="Login" asp-controller="Account" method="post" class="registration-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            
            

            <!-- UserName -->
            <div class="form-group">
                <label asp-for="UserName" class="form-label">@SharedLocalizer["Username"] *</label>
                <input asp-for="UserName" class="form-input" placeholder="@SharedLocalizer["EnterYourUsername"]" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

           

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password" class="form-label">@SharedLocalizer["Password"] *</label>
                <input asp-for="Password" class="form-input" type="password" placeholder="@SharedLocalizer["EnterYourPassword"]" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn-register">@SharedLocalizer["Confirm"]</button>
            </div>

            @* <!-- Divider -->
            <div class="divider">
                <span>@SharedLocalizer["Or"]</span>
            </div> *@
            <!-- Google Sign Up Button -->
            <div class="form-group">
                <a  class="btn-google" asp-controller="Account" asp-action="GoogleSignIn">
                    <svg class="google-icon" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Sign in with Google
                </a>
            </div>

           

           @* <!-- Divider -->
            <div class="divider">
                <span>@SharedLocalizer["Or"]</span>
            </div> *@
            <!-- forget password Link -->
            <div class="login-link">
                <p>Forget Password? <a asp-action="VerifyEmail" asp-controller="EditUserProfile">Reset Password</a></p>
            </div>
            <!-- SignUp Link -->
            <div class="login-link">
                <p>@SharedLocalizer["CreateAnAccount"] <a asp-action="determineRole" asp-controller="Account">@SharedLocalizer["SignUp"]</a></p>
            </div>
        </form>
    </div>
</div>

