@model CreateRentVM
@{
    ViewData["Title"] = "RentingCar";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="~/css/RentCar.css" />
<link rel="stylesheet" href="~/css/ViewBag.css" />
<script src="~/js/ViewBag.js"></script>


@if (ViewBag.Success != null)
{
    <div class="toast-alert success-toast">
        <span>@ViewBag.Success</span>
        <button class="close-btn">&times;</button>
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="toast-alert error-toast">
        <span>@ViewBag.Error</span>
        <button class="close-btn">&times;</button>
    </div>
}

@inject UserManager<AppUser> userManager
@{
    var userId = userManager.GetUserId(User);
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs">
                    <span class="mr-2">
                        <a href="@Url.Action("Index", "Home")">@SharedLocalizer["Home"] <i class="ion-ios-arrow-forward"></i></a>
                    </span>
                    <span>@SharedLocalizer["Users"] <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread">Rent a Car</h1>
            </div>
        </div>
    </div>
</section>

<div class="rent-container">
    <div class="rent-card">
        <div class="card-header">
            <h1 class="card-title">🚗 Rent a Car</h1>
        </div>
        
        <div class="card-content">
            <form asp-action="PaymentSummary" asp-controller="Payment" method="post">
                <input type="hidden" asp-for="CarId" />
                <input type="hidden" asp-for="UserId" value="@userId"/>
                
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label">📅 Start Date</label>
                        <input asp-for="StartDate" type="datetime-local"
                               min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                               class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EndDate" class="form-label">📅 End Date</label>
                        <input asp-for="EndDate" type="datetime-local"
                               min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                               class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                
               <div class="form-group location-input">
                <label asp-for="Pick_up_location" class="form-label">📍 Pick-up Location</label>
                <select asp-for="Pick_up_location" class="form-control">
                    <option value=""> Select Pickup </option>
                    <option value="Cairo">Cairo</option>
                    <option value="Giza">Giza</option>
                    <option value="Alexandria">Alexandria</option>
                </select>
                <span asp-validation-for="Pick_up_location" class="text-danger"></span>
            </div>

            <div class="form-group location-input">
                <label asp-for="Drop_Off_location" class="form-label">📍 Drop-off Location</label>
                <select asp-for="Drop_Off_location" class="form-control">
                    <option value=""> Select Drop-off </option>
                    <option value="Cairo">Cairo</option>
                    <option value="Giza">Giza</option>
                    <option value="Alexandria">Alexandria</option>
                </select>
                <span asp-validation-for="Drop_Off_location" class="text-danger"></span>
            </div>

                
                <div class="form-buttons">
                    <button type="submit" class="btn btn-update">
                        💳 Continue to Checkout
                    </button>
                    <a href="@Url.Action("Cars", "Home")" class="btn btn-delete">
                        ❌ @SharedLocalizer["Cancel"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>