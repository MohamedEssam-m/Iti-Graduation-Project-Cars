@model Offer  
<br />
<br />
<br />
<br />
<link rel="stylesheet" href="~/css/ViewBag.css" />
<script src="~/js/ViewBag.js"></script>
@if (ViewBag.Success != null)
{
    <div class="toast-alert success-toast">
        <span>@ViewBag.Success</span>
        <button class="close-btn">&times;</button>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="toast-alert error-toast">
        <span>@ViewBag.Error</span>
        <button class="close-btn">&times;</button>
    </div>
}
<div class="delete-confirm-container">
    <div class="delete-card">
        <h2>Are you sure you want to delete this Offer?</h2>
        <p>This action cannot be undone</p>

        <div class="accident-details">
            <p><strong>Date:</strong> @Model.OfferDate</p>
            <p><strong>Location:</strong> @Model.CarName</p>
            <p><strong>Description:</strong> @Model.Details</p>
            <p><strong>Offer Start Date:</strong> @Model.OfferStartDate</p>
            <p><strong>Offer End Date:</strong> @Model.OfferEndDate</p>
        </div>

        <div class="button-group">
            <!-- Confirm Delete -->
            <form asp-action="Delete" asp-controller="Offer" method="post">
                <input type="hidden" name="offerId" value="@Model.OfferId" />
                <button type="submit" class="btn btn-danger">Confirm</button>
            </form>

            <!-- Cancel -->
            <a asp-action="Repair" asp-controller="Accident" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>

<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #000000;
    color: #ffffff;
    min-height: 100vh;
    display: flex;
    flex-direction: column;   
    align-items: center;      
    justify-content: flex-start; 
    padding: 20px;
}


        .delete-confirm-container {
            width: 100%;
            max-width: 500px;
            position: relative;
        }

        .delete-card {
            background: linear-gradient(145deg, #1a1a1a, #2d2d2d);
            border: 2px solid #00ffff;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.8),
                0 0 20px rgba(0, 255, 255, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }

        .delete-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, #00ffff, transparent);
        }

        .delete-card h2 {
            color: #ffffff;
            font-size: 24px;
            font-weight: 600;
            text-align: center;
            margin-bottom: 12px;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
        }

        .delete-card > p {
            color: #cccccc;
            text-align: center;
            margin-bottom: 30px;
            font-size: 16px;
            font-style: italic;
        }

        .accident-details {
            background: rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(0, 255, 255, 0.3);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
            position: relative;
        }

        .accident-details::before {
            content: '';
            position: absolute;
            top: -1px;
            left: 20px;
            right: 20px;
            height: 1px;
            background: linear-gradient(90deg, transparent, #00ffff, transparent);
            opacity: 0.6;
        }

        .accident-details p {
            margin-bottom: 10px;
            font-size: 14px;
            line-height: 1.6;
        }

        .accident-details p:last-child {
            margin-bottom: 0;
        }

        .accident-details strong {
            color: #00ffff;
            font-weight: 600;
            text-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
        }

        .button-group {
            display: flex;
            gap: 15px;
            justify-content: center;
            align-items: center;
        }

        .button-group form {
            display: inline-block;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.6s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn-danger {
            background: linear-gradient(145deg, #dc3545, #b02a37);
            color: #ffffff;
            border: 2px solid #dc3545;
            box-shadow: 
                0 4px 15px rgba(220, 53, 69, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
        }

        .btn-danger:hover {
            background: linear-gradient(145deg, #c82333, #a02834);
            border-color: #c82333;
            box-shadow: 
                0 6px 20px rgba(220, 53, 69, 0.4),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: linear-gradient(145deg, #404040, #2d2d2d);
            color: #ffffff;
            border: 2px solid #00ffff;
            box-shadow: 
                0 4px 15px rgba(0, 255, 255, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
        }

        .btn-secondary:hover {
            background: linear-gradient(145deg, #505050, #3d3d3d);
            border-color: #00cccc;
            box-shadow: 
                0 6px 20px rgba(0, 255, 255, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
            color: #00ffff;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
        }

</style>
