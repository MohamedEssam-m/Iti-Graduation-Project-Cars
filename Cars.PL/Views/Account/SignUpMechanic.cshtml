@using Cars.BLL.ModelVM.Account
@model SignUpMechanicVM

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/SignUp.css" />

<div class="registration-container">
    <div class="registration-card">
        <div class="registration-header">
            
            <h2>@SharedLocalizer["CreateYourAccount"]</h2>
            <p>@SharedLocalizer["JoinUsToday"]</p>
        </div>

        <form enctype="multipart/form-data" asp-action="SignUp" asp-controller="Account" method="post" class="registration-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            
            <!-- Full Name -->
            <div class="form-group">
                <label asp-for="Fullname" class="form-label">@SharedLocalizer["FullName"]*</label>
                <input asp-for="Fullname" class="form-input" placeholder="@SharedLocalizer["EnterYourFullName"]" />
                <span asp-validation-for="Fullname" class="validation-error"></span>
            </div>

            <!-- Username -->
            <div class="form-group">
                <label asp-for="UserName" class="form-label">@SharedLocalizer["Username"] *</label>
                <input asp-for="UserName" class="form-input" placeholder="@SharedLocalizer["ChooseAUsername"]" />
                <span asp-validation-for="UserName" class="validation-error"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Email" class="form-label">@SharedLocalizer["Email"] *</label>
                <input asp-for="Email" class="form-input" placeholder="@SharedLocalizer["EnterYourEmailAddress"]" />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <!-- Phone Number -->
            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label">@SharedLocalizer["PhoneNumber"] *</label>
                <input asp-for="PhoneNumber" class="form-input" placeholder="@SharedLocalizer["EnterYourPhoneNumber"]" />
                <span asp-validation-for="PhoneNumber" class="validation-error"></span>
            </div>

            <!-- Address -->
            <div class="form-group">
                <label asp-for="Address" class="form-label">@SharedLocalizer["Address"]</label>
                <textarea asp-for="Address" class="form-textarea" placeholder="@SharedLocalizer["EnterYourAddress"]" rows="3"></textarea>
                <span asp-validation-for="Address" class="validation-error"></span>
            </div>

            <!-- Age -->
            <div class="form-group">
                <label asp-for="Age" class="form-label">@SharedLocalizer["Age"] *</label>
                <input asp-for="Age" class="form-input" type="number" placeholder="@SharedLocalizer["EnterYourAge"]" min="18" max="100" />
                <span asp-validation-for="Age" class="validation-error"></span>
            </div>
            <!-- Profile Picture -->
            <div class="form-group">
                <label asp-for="Mechanic_Image" class="form-label">@SharedLocalizer["ProfilePicture"]</label>
                <input asp-for="Mechanic_Image" type="file" class="form-input" />
                <span asp-validation-for="Mechanic_Image" class="text-danger"></span>
            </div>
            <!-- Specialization -->
            <div class="form-group">
                <label asp-for="Specialization" class="form-label">@SharedLocalizer["Specialization"] *</label>
                <input asp-for="Specialization" class="form-input" type="number" placeholder="@SharedLocalizer["EnterYourSpecialization"]" min="18" max="100" />
                <span asp-validation-for="Specialization" class="validation-error"></span>
            </div>
            <!-- ExperienceYears -->
            <div class="form-group">
                <label asp-for="ExperienceYears" class="form-label">@SharedLocalizer["ExperienceYears"] *</label>
                <input asp-for="ExperienceYears" class="form-input" type="number" placeholder="@SharedLocalizer["EnterYourExperienceYears"]" min="18" max="100" />
                <span asp-validation-for="ExperienceYears" class="validation-error"></span>
            </div>
            <!-- WorkshopAddress -->
            <div class="form-group">
                <label asp-for="WorkshopAddress" class="form-label">@SharedLocalizer["WorkshopAddress"] *</label>
                <input asp-for="WorkshopAddress" class="form-input" type="text" placeholder="@SharedLocalizer["EnterYourWorkshopAddress"]" min="18" max="100" />
                <span asp-validation-for="WorkshopAddress" class="validation-error"></span>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password" class="form-label">@SharedLocalizer["Password"] *</label>
                <input asp-for="Password" class="form-input" type="password" placeholder="@SharedLocalizer["CreateAPassword"]" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">@SharedLocalizer["ConfirmPassword"] *</label>
                <input asp-for="ConfirmPassword" class="form-input" type="password" placeholder="@SharedLocalizer["ConfirmYourPassword"]" />
                <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn-register">@SharedLocalizer["CreateAccount"]</button>
            </div>

            <!-- Divider -->
            <div class="divider">
                <span>@SharedLocalizer["Or"]</span>
            </div>

            <!-- Google Sign Up Button -->
            <div class="form-group">
                <button type="button" class="btn-google" onclick="signUpWithGoogle()">
                    <svg class="google-icon" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    @SharedLocalizer["SignUpWithGoogle"]
                </button>
            </div>

            <!-- Login Link -->
            <div class="login-link">
                <p>@SharedLocalizer["AlreadyHaveAnAccount"] <a asp-action="LoginView" asp-controller="Account">@SharedLocalizer["Login"]</a></p>
            </div>
        </form>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const inputs = document.querySelectorAll("input, textarea, select");
    inputs.forEach(input => {
        input.addEventListener("blur", () => {
            input.classList.add("touched");
        });
    });
});
</script>

